---
export interface Props {
  data: any;
}

const { data } = Astro.props;
---

<div class="p-5 backdrop-filter backdrop-blur-xl rounded-2xl flex flex-wrap items-center justify-center gap-8" style="backdrop-filter: blur(20px);">
  <div class="text-green-400">
    <p class="text-2xl font-bold">{data.openPRs}</p>
    <p class="text-md">Open PRs</p>
  </div>
  <div class="text-purple-400">
    <p class="text-2xl font-bold">{data.mergedPRs}</p>
    <p class="text-md">Merged PRs</p>
  </div>
  <div class="text-blue-400">
    <p class="text-2xl font-bold">{data.commits}</p>
    <p class="text-md">Total Commits</p>
  </div>
  <div class="text-green-400">
    <p class="text-2xl font-bold">{data.additions}</p>
    <p class="text-md">Total Additions</p>
  </div>
  <div class="text-red-400">
    <p class="text-2xl font-bold">{data.deletions}</p>
    <p class="text-md">Total Deletions</p>
  </div>
  <div class="text-cyan-400">
    <p class="text-2xl font-bold">{data.files}</p>
    <p class="text-md">Cumulative Files Changed</p>
  </div>
</div>
